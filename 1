def sum_neg_between_max_min(arr):
    if not arr:
        return 0

    max_value = max(arr)
    min_value = min(arr)
    max_index = arr.index(max_value)
    min_index = arr.index(min_value)

    # Убедимся, что мы идем от меньшего индекса к большему
    start_index = min(max_index, min_index)
    end_index = max(max_index, min_index)

    # Суммируем отрицательные элементы между макс и мин
    negative_sum = sum(x for x in arr[start_index + 1:end_index] if x < 0)

    return negative_sum

# Пример использования
A = [1, -2, 3, -4, 5, -6, -1]
result = sum_neg_between_max_min(A)
print(result)  # Вывод суммы отрицательных элементов
